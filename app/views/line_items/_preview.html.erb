<div class="previewer">
  <div class="scene">
    <%= image_tag preview.variant.actionImageFull(1), class: "actionImageFull" %>
    <%= image_tag photo_variant_url(preview.photo, preview.variant, format: :png), class: "productImage productImage-#{preview.variant.actionImagePart}-1" %>
  </div>
  <ul class="toolbar">
    <% (1..6).each do |thumb| %>
      <li>
        <img src="<%= image_path(preview.variant.actionImageThumb(thumb)) %>"
             data-product="productImage-<%= preview.variant.actionImagePart %>-<%= thumb %>"
             data-action="<%= image_path(preview.variant.actionImageFull(thumb)) %>"
             class="actionImageThumb<%= ' actionImageThumb-selected' if thumb == 1 %>">
      </li>
    <% end %>
  </ul>
  <div class="navbar">
    <a href="<%= photos_path %>" class="photo-back">
      <%= image_tag "angle_bracket.png" %>
      <%= image_tag preview.photo.url, class: "photo-choosen" %>
    </a>
    Free shipping on orders over $50!
  </div>
</div>
<div class="product">
  <h2>Choose your canvas size:</h2>
  <div class="product-sizes">
    <div class="product-size product-size-selected">
      <div><%= preview.variant.name %></div>
      <div><%= number_to_currency(preview.variant.price) %></div>
    </div>
    <div class="product-size product-size-disabled">
      <div>16" x 16"</div>
      <div>$79.00</div>
    </div>
  </div>
  <p>* <em>The canvas measures 1.5" deep, so please keep in mind that 1.5" of your photo will wrap around each of the four sides.</em></p>
  <h2>Product Details</h2>
  <ul>
    <li>Poly-cotton blend canvas</li>
    <li>20.5 mil thick canvas</li>
    <li>Fade resistant</li>
    <li>Hand stretched</li>
    <li>Hand glued solid wood stretch bars</li>
    <li>Matte finish coating</li>
  </ul>
  <%= form_for preview do |form| %>
    <%= form.hidden_field :photo_id %>
    <%= form.hidden_field :variant_id %>
    <div class="buttons">
      <% if preview.new_record? %>
        <%= form.submit "Add to cart - #{number_to_currency(preview.variant.price)}", class: "button-small button" %>
      <% else %>
        <%= form.submit "Update cart - #{number_to_currency(preview.variant.price)}", class: "button-small button" %>
      <% end %>
      
    </div>
  <% end %>
</div>


