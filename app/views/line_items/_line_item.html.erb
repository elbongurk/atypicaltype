<tr>
  <td class="preview"><%= image_tag line_item_path(line_item, format: :png) %></td>
  <td class="description"><%= line_item.product.description %> - <%= line_item.product.size %></td>
  <td class="price"><%= number_to_currency(line_item.product.price) %></td>
  <td class="quantity"><%= select_tag :quantity, options_for_select((1..20), line_item.quantity) %></td>
  <td class="remove">
    <%= form_for line_item, method: :delete do |form| %>
      <%= form.submit "X" %>
    <% end %>
  </td>
  <td class="total"><%= number_to_currency(line_item.total) %></td>
</tr>
