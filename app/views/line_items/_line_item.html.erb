<tr>
  <td class="preview"><%= link_to image_tag(photo_variant_path(line_item.photo, line_item.variant, format: :png)), line_item_path(line_item) %></td>
  <td class="description"><%= link_to "#{line_item.variant.product.description} - #{line_item.variant.name}", line_item_path(line_item) %></td>
  <td class="price"><%= number_to_currency(line_item.variant.price) %></td>
  <td class="quantity">
    <%= form_for line_item do |form| %>
      <%= form.select :quantity, (1..20) %>
    <% end %>
  </td>
  <td class="remove">
    <%= form_for line_item, method: :delete do |form| %>
      <%= form.submit "X" %>
    <% end %>
  </td>
  <td class="total"><%= number_to_currency(line_item.total) %></td>
</tr>
