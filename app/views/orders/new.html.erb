<%= form_for @order  do |form| %>
  <fieldset>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </fieldset>
  <fieldset>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </fieldset>
  <fieldset>
    <%= form.label :address1 %>
    <%= form.text_field :address1 %>
  </fieldset>
  <fieldset>
    <%= form.label :address2 %>
    <%= form.text_field :address2 %>
  </fieldset>
  <fieldset>
    <%= form.label :city %>
    <%= form.text_field :city %>
  </fieldset>
  <fieldset>
    <%= form.label :state %>
    <%= form.select :state, us_states %>
  </fieldset>
  <fieldset>
    <%= form.label :postal_code %>
    <%= form.text_field :postal_code %>
  </fieldset>
  <%= form.submit "Continue Order" %>
<% end %>
